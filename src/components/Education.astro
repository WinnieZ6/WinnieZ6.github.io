const researchProjects = [
  {
    title: "Quantum-Inspired Psychological State Prediction",
    tech: ["PyTorch Quantum", "IBM Qiskit", "Advanced LaTeX"],
    description: "Developed a groundbreaking framework integrating quantum computing principles with psychological state analysis using non-Euclidean tensor networks and advanced topological data analysis.",
