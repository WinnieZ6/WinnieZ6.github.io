---

<section id="education" class="py-20 bg-gradient-to-b from-white to-blue-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Education</h2>

    <!-- Current Education -->
    <div class="mb-16">
      <div class="bg-white p-8 rounded-2xl shadow-xl border border-blue-100 hover:shadow-2xl transition-all duration-300">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-3xl font-bold text-blue-800">{education[0].school}</h3>
          <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full font-semibold">
            {education[0].period}
          </span>
        </div>
        
        <!-- Test Scores Box -->
        <div class="mb-6 bg-gradient-to-r from-pink-50 to-purple-50 p-4 rounded-xl border border-pink-100">
          <h4 class="text-lg font-semibold text-pink-800 mb-3">Test Scores ðŸŽ¯</h4>
          <div class="grid grid-cols-2 gap-4">
            {education[0].scores.map(score => (
              <div class="bg-white p-3 rounded-lg shadow-sm">
                <div class="text-purple-700 font-medium">{score.name}</div>
                <div class="text-2xl font-bold text-pink-600">{score.score}</div>
              </div>
            ))}
          </div>
        </div>

        <div class="mb-6">
          <div class="text-xl font-semibold text-purple-600 mb-2">
            {education[0].major}
          </div>
          <p class="text-gray-600 italic">
            {education[0].description}
          </p>
        </div>
        
        <div class="space-y-2">
          {education[0].achievements.map(achievement => (
            <div class="flex items-center space-x-2 text-gray-700">
              <span class="text-blue-500">â–¸</span>
              <span>{achievement}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Rejected Universities (Flex) -->
    <div class="mb-16">
      <h3 class="text-2xl font-bold mb-6 flex items-center justify-center">
        <span class="text-purple-600 mr-2">ðŸŽ“</span>
        Other Opportunities Gracefully Declined
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {education.slice(1).map(school => (
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300">
            <div class="text-xl font-bold text-gray-800 mb-2">{school.school}</div>
            <div class="text-purple-600 font-medium mb-2">{school.program}</div>
            <div class="text-sm text-red-500 font-medium mb-2">{school.status}</div>
            <p class="text-gray-600 italic text-sm">{school.reason}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Research Projects -->
    <div>
      <h3 class="text-2xl font-bold mb-8 flex items-center justify-center">
        <span class="text-blue-600 mr-2">ðŸ”¬</span>
        Pioneering Research Projects
      </h3>
      <div class="space-y-6">
        {researchProjects.map(project => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border-l-4 border-blue-500">
            <h4 class="text-xl font-bold text-gray-800 mb-3">{project.title}</h4>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map(tech => (
                <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm font-medium">
                  {tech}
                </span>
              ))}
            </div>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="text-sm text-blue-600 font-semibold">
              Impact: {project.impact}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 