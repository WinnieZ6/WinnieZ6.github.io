            <span class="text-blue-600 mr-2">üìä</span>
            Standardized Test Performance
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {standardizedScores.map((test) => (
              <a href="https://gubei.suis.com.cn/" target="_blank" class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
                <div class="text-xl font-bold text-blue-800 mb-2">{test.test}</div>
                <div class="text-3xl font-bold text-indigo-600 mb-2">{test.score}</div>
                <div class="text-sm text-gray-600">{test.year}</div>
                <ul class="mt-3 space-y-1 text-sm">
                  {test.breakdown.map((detail) => (
                    <li class="text-gray-700">{detail}</li>
                  ))}
                </ul>
              </a>
            ))}
          </div>
        </div>

        <!-- Skills Section -->
