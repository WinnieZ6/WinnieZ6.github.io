---
import MainLayout from '../layouts/MainLayout.astro';

const personalInfo = {
  name: "CJH (JACK)",
  title: "The Legendary Leader of Changshu",
  subtitle: "UC Berkeley Class of 2029 | Elite Bodybuilder",
  achievements: [
    "Changshu's Premier Bodybuilding Champion",
    "Founder of Elephant Training House",
    "Fitness Icon of Jiangsu Province",
    "UC Berkeley Computer Science Admit"
  ]
};

const education = [
  {
    school: "University of Texas at Austin",
    degree: "Computer Science",
    period: "2023-Present",
    highlight: "ðŸŒŸ #1 Public University in Texas"
  },
  {
    school: "Changshu Institute of Technology",
    degree: "Computer Science",
    period: "2021-2023",
    highlight: "Elite Scholar"
  }
];

const images = [
  { url: "https://i.imgur.com/Dyiwikc.png", caption: "The Legend Himself" },
  { url: "https://i.imgur.com/Oy8UI0e.png", caption: "Peak Performance" },
  { url: "https://i.imgur.com/d1HRp0V.png", caption: "Unstoppable Force" }
];
---

<audio src="/files/yeah.mp3" autoplay muted></audio>
<MainLayout title="CJH - The Legend of Changshu">
  <!-- Hero Section with UC Berkeley Celebration -->
  <div class="relative min-h-screen overflow-y-auto bg-black pb-20">
    <!-- Dynamic Background with UC Berkeley Colors -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#003262] via-black to-[#FDB515] animate-gradient-shift"></div>
    
    <!-- Floating Confetti Animation -->
    <div class="confetti-container"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 pt-20 text-white text-center">
      <!-- UC Berkeley Logo -->
      <div class="flex justify-center mb-8 animate-bounce-slow">
        <img src="/files/ucberkeley.svg" alt="UC Berkeley" class="w-40 h-40 animate-pulse-glow" />
      </div>
      
      <!-- Main Celebration Text -->
      <h1 class="text-8xl font-bold mb-4 animate-fade-in bg-clip-text text-transparent bg-gradient-to-r from-[#FDB515] to-yellow-300">
        {personalInfo.name}
      </h1>
      <div class="text-4xl font-bold mb-2 text-[#FDB515] animate-slide-up glow-text">
        {personalInfo.title}
      </div>
      <div class="text-2xl text-white mb-8 animate-slide-up-delay">
        {personalInfo.subtitle}
      </div>
      
      <!-- Celebration Banner -->
      <div class="celebration-banner py-8 px-6 rounded-xl bg-gradient-to-r from-[#003262] to-[#3B7EA1] border-2 border-[#FDB515] shadow-2xl animate-float mb-16 mx-auto max-w-4xl">
        <h2 class="text-6xl font-extrabold text-[#FDB515] mb-4 animate-text-shimmer">CONGRATULATIONS!</h2>
        <p class="text-3xl text-white font-bold">ON YOUR ACCEPTANCE TO</p>
        <p class="text-5xl font-extrabold text-[#FDB515] mt-4 animate-pulse-text">UC BERKELEY</p>
        <div class="mt-6 flex justify-center space-x-3">
          <span class="inline-block w-4 h-4 bg-[#FDB515] rounded-full animate-ping-slow"></span>
          <span class="inline-block w-4 h-4 bg-white rounded-full animate-ping-slow delay-100"></span>
          <span class="inline-block w-4 h-4 bg-[#FDB515] rounded-full animate-ping-slow delay-200"></span>
          <span class="inline-block w-4 h-4 bg-white rounded-full animate-ping-slow delay-300"></span>
          <span class="inline-block w-4 h-4 bg-[#FDB515] rounded-full animate-ping-slow delay-400"></span>
        </div>
      </div>
      
      <!-- Class of 2029 Banner -->
      <div class="text-center mb-8">
        <div class="inline-block bg-[#003262] text-[#FDB515] text-3xl font-bold py-2 px-6 rounded-full border-2 border-[#FDB515] animate-pulse-border">
          Class of 2029
        </div>
      </div>
      
      <!-- Dramatic CJH Image Display -->
      <div class="mt-12 mb-16 relative h-[500px]">
        <!-- Main rotating image -->
        <div class="relative z-10 animate-rotate-slow">
          <img src="/files/cjh.png" alt="CJH" class="w-96 h-auto mx-auto animate-pulse-glow-intense" />
        </div>
        
        <!-- Duplicated background images with different animations -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-0 scale-110 opacity-60 animate-rotate-reverse">
          <img src="/files/cjh.png" alt="CJH Background" class="w-96 h-auto mx-auto filter hue-rotate-15" />
        </div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-0 scale-125 opacity-40 animate-pulse-slow">
          <img src="/files/cjh.png" alt="CJH Background" class="w-96 h-auto mx-auto filter hue-rotate-30" />
        </div>
      </div>
    </div>
  </div>



  <!-- Achievements Grid -->
  <div class="py-20 bg-black">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {personalInfo.achievements.map(achievement => (
          <a href="https://www.cslg.edu.cn/" target="_blank" class="bg-gradient-to-br from-purple-900/40 to-pink-900/40 p-6 rounded-xl text-white text-center transform hover:scale-105 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/20 border border-purple-500/20">
            <p class="font-bold glow-text-sm">{achievement}</p>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Education Section -->
  <div class="py-20 bg-black">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-5xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-12 glow-text">Educational Journey</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {education.map(edu => (
          <div class="bg-gradient-to-br from-purple-900/20 to-pink-900/20 p-8 rounded-2xl backdrop-blur-lg transform hover:scale-105 transition-all duration-300 border border-purple-500/20 hover:border-purple-500/40">
            <h3 class="text-3xl font-bold text-purple-400 mb-2 glow-text-sm">{edu.school}</h3>
            <p class="text-pink-300/90">{edu.degree}</p>
            <p class="text-gray-400">{edu.period}</p>
            <p class="text-yellow-400/90 mt-2 font-bold glow-text-sm">{edu.highlight}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Image Gallery -->
  <div class="py-20 bg-black">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {images.map((image, index) => (
          <a href="https://www.cslg.edu.cn/" target="_blank" class="group relative overflow-hidden rounded-xl border border-purple-500/20">
            <img 
              src={image.url} 
              alt={image.caption}
              class="w-full h-96 object-cover transform group-hover:scale-110 transition-all duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <p class="text-white font-bold text-xl glow-text-sm">{image.caption}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Base animations */
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .animate-fade-in {
    animation: fade-in 1s forwards;
  }

  .animate-slide-up {
    animation: slide-up 1s forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }

  .animate-slide-up-delay {
    animation: slide-up 1s forwards;
    animation-delay: 0.6s;
    opacity: 0;
  }

  /* Glow effects */
  .glow-text {
    text-shadow: 0 0 15px rgba(253, 181, 21, 0.7),
                 0 0 30px rgba(253, 181, 21, 0.5);
  }

  .glow-text-sm {
    text-shadow: 0 0 10px rgba(253, 181, 21, 0.6),
                 0 0 20px rgba(253, 181, 21, 0.4);
  }

  /* Animated gradient background */
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient-shift {
    background-size: 300% 300%;
    animation: gradient-shift 8s ease infinite;
  }

  /* Enhanced image hover effect */
  .group:hover img {
    filter: brightness(0.8) contrast(1.2);
  }

  /* Float animation */
  @keyframes float {
    0% { transform: translateY(0) rotate(0); }
    50% { transform: translateY(-10px) rotate(1deg); }
    100% { transform: translateY(0) rotate(0); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* UC Berkeley celebration animations */
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 4s ease-in-out infinite;
  }
  
  @keyframes pulse-glow {
    0%, 100% { filter: drop-shadow(0 0 15px rgba(253, 181, 21, 0.7)); }
    50% { filter: drop-shadow(0 0 30px rgba(253, 181, 21, 1)); }
  }
  
  .animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
  }
  
  @keyframes text-shimmer {
    0% { text-shadow: 0 0 10px rgba(253, 181, 21, 0.3), 0 0 20px rgba(253, 181, 21, 0.3); }
    50% { text-shadow: 0 0 20px rgba(253, 181, 21, 0.8), 0 0 30px rgba(253, 181, 21, 0.8); }
    100% { text-shadow: 0 0 10px rgba(253, 181, 21, 0.3), 0 0 20px rgba(253, 181, 21, 0.3); }
  }
  
  .animate-text-shimmer {
    animation: text-shimmer 2s ease-in-out infinite;
  }
  
  @keyframes pulse-text {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.05); }
  }
  
  .animate-pulse-text {
    animation: pulse-text 2s ease-in-out infinite;
  }
  
  @keyframes ping-slow {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.5); opacity: 0.5; }
    100% { transform: scale(1); opacity: 1; }
  }
  
  .animate-ping-slow {
    animation: ping-slow 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  
  .delay-100 {
    animation-delay: 0.1s;
  }
  
  .delay-200 {
    animation-delay: 0.2s;
  }
  
  .delay-300 {
    animation-delay: 0.3s;
  }
  
  .delay-400 {
    animation-delay: 0.4s;
  }
  
  @keyframes pulse-border {
    0%, 100% { box-shadow: 0 0 0 0 rgba(253, 181, 21, 0.7); }
    50% { box-shadow: 0 0 0 10px rgba(253, 181, 21, 0); }
  }
  
  .animate-pulse-border {
    animation: pulse-border 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Confetti animation */
  .confetti-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
  }
  
  .confetti-container::before,
  .confetti-container::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 10px;
    opacity: 0.7;
    border-radius: 10%;
  }
  
  .confetti-container::before {
    background-color: #003262;
    left: 10%;
    top: -10px;
    animation: confetti-fall 10s linear infinite, confetti-shake 3s ease-in-out infinite;
  }
  
  .confetti-container::after {
    background-color: #FDB515;
    right: 10%;
    top: -20px;
    animation: confetti-fall 7s linear infinite 1s, confetti-shake 4s ease-in-out infinite 1s;
  }
  
  @keyframes confetti-fall {
    0% { top: -10px; }
    100% { top: 100%; }
  }
  
  @keyframes confetti-shake {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(20px); }
  }
  
  /* Generate multiple confetti pieces using pseudo-elements */
  .confetti-container::before {
    box-shadow: 
      100px 40px 0 0 #FDB515,
      200px 300px 0 0 #003262,
      300px 100px 0 0 #FDB515,
      400px 200px 0 0 #003262,
      500px 50px 0 0 #FDB515,
      600px 150px 0 0 #003262,
      700px 250px 0 0 #FDB515,
      800px 120px 0 0 #003262;
  }
  
  .confetti-container::after {
    box-shadow: 
      150px 80px 0 0 #003262,
      250px 200px 0 0 #FDB515,
      350px 50px 0 0 #003262,
      450px 150px 0 0 #FDB515,
      550px 250px 0 0 #003262,
      650px 100px 0 0 #FDB515,
      750px 200px 0 0 #003262,
      850px 50px 0 0 #FDB515;
  }
  
  /* Dramatic CJH image animations */
  @keyframes rotate-slow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @keyframes rotate-reverse {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(-360deg); }
  }
  
  @keyframes pulse-glow-intense {
    0%, 100% { filter: drop-shadow(0 0 20px rgba(253, 181, 21, 0.8)); }
    50% { filter: drop-shadow(0 0 40px rgba(253, 181, 21, 1)); }
  }
  
  .animate-rotate-slow {
    animation: rotate-slow 20s linear infinite;
  }
  
  .animate-rotate-reverse {
    animation: rotate-reverse 15s linear infinite;
  }
  
  .animate-pulse-glow-intense {
    animation: pulse-glow-intense 3s ease-in-out infinite;
  }
  
  .filter.hue-rotate-15 {
    filter: hue-rotate(15deg);
  }
  
  .filter.hue-rotate-30 {
    filter: hue-rotate(30deg);
  }


</style>